<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

      <record model="ir.ui.view" id="view_meli_notifications_tree">
  			<field name="name">ocapi.connection.notification.tree</field>
  			<field name="model">ocapi.connection.notification</field>
  			<field name="arch" type="xml">
  				<tree create="0" edit="1" delete="1" default_order='sent desc, notification_id desc'>
  					<field name="notification_id" />
  					<field name="sent" />
  					<field name="topic" />
  					<field name="resource" />
  					<field name="user_id" />
  					<field name="state" />
  					<field name="processing_errors" invisible="0" />
  				</tree>
  			</field>
  		</record>

  		<record model="ir.ui.view" id="view_ocapi_notification_form">
  			<field name="name">ocapi.connection.form</field>
  			<field name="model">ocapi.connection.notification</field>
  			<field name="arch" type="xml">
  				<form create="0" edit="0" delete="0">
  					<header>
  						<field name="state" widget="statusbar" />
  					</header>
  					<sheet>
  						<div class="oe_title">
  							<h1><field name="notification_id"/></h1>
  							<field name='user_id'/>
  							<field name='application_id'/>
                <field name='connection_account'/>
  						</div>
  						<div class="oe_button_box" name="button_box_mel" style="width: auto;">
  							<button name='process_notification' type="object"
  								string="Procesar"
  								title="Procesar notificación"
  								confirm="¿Está seguro que necesita procesar esta notificación?"
  								class="oe_stat_button"
  								icon="fa-refresh"/>
  						</div>
  						<group>
  							<group>
  								<field name="topic" />
  								<field name="resource" />
  								<field name="sent" />
  								<field name="received" />
  							</group>
  							<group>
  								<field name='attempts'/>
  								<field name="processing_started" />
  								<field name="processing_ended" />
  								<field name="processing_errors" />
                  <field name="processing_logs" />
  							</group>
  						</group>
  					</sheet>
  				</form>
  			</field>
  		</record>

      <record id="ocapi_notifications_search_view" model="ir.ui.view">
  			<field name="name">Ocapi Notifications - Search</field>
  			<field name="model">ocapi.connection.notification</field>
  			<field name="arch" type="xml">
  				<search  string="Search Ocapi Notifications Information">
  					<field name="notification_id" />
  					<field name="sent" />
  					<field name="topic" />
  					<field name="resource" />
  					<field name="user_id" />
  					<field name="state" />
  					<filter string="Questions only"
  						domain="[('topic', '=', 'questions')]"
  						name="questions_filter" />
  					<filter string="Today"
  						domain="[('sent', '=', context_today().strftime('%Y-%m-%d'))]"
  						name="today_filter" />
  					<filter string='State' icon="terp-mrp" domain="[]"
  							context="{'group_by' : 'state'}" name="state_filter"/>
  					<filter string='Topic' domain="[]"
  								context="{'group_by' : 'topic'}" name="topic_filter"/>
  				</search>
  			</field>
  		</record>

      <record model="ir.actions.act_window" id="action_ocapi_notifications_tree">
  			<field name="name">Notifications</field>
  			<field name="type">ir.actions.act_window</field>
  			<field name="res_model">ocapi.connection.notification</field>
  			<!--field name="view_type">form</field-->
  			<field name="view_mode">tree,form</field>
  			<field name="search_view_id" ref="ocapi_notifications_search_view" />
  		</record>

      <menuitem id="menu_ocapi_connectors" name="Connectors" parent="sale.sale_menu_root" sequence="5"
          groups="odoo_connector_api.group_ocapi_connectors_manager" active="False"/>

      <menuitem id="menu_ocapi_notifications"
        action="action_ocapi_notifications_tree"
        parent="menu_ocapi_connectors"
        name="Notifications"  sequence="3"/>

		</data>
</odoo>
