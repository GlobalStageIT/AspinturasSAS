<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_config_col_form_view_for" model="ir.ui.view">
            <field name="name">Migrar Responsabilidades Fiscales</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='multi_company']" position="before">
                    <div id="business_documents">
                        <h2>Responsabilidades Fiscales</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="text-muted">
                                        Migrar Responsabilidades fiscales de contactos creados antes de Agosto del 2020
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16 row">
                                            <button name="generar_responsabilidades_fiscales" type="object" string="Migrar Responsabilidades Fiscales"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                   </div>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
