<odoo>
    <record id="view_form_cancellation_reason" model="ir.ui.view">
        <field name="name">Cancellation reason</field>
        <field name="model">l10n_co_freight_route.cancellation_reason</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="cargo"/>
                <field name="trip"/>
                <field name="shipment"/>
                <field name="manifest"/>
                <field name="initial_fulfilled_shipment"/>
                <field name="fulfilled_shipment"/>
                <field name="fulfilled_manifest"/>
            </tree>
        </field>
    </record>
</odoo>
