                    <field name="fee_amount"/>
                    <field name="taxes_amount"/>
                    <field name="currency_id"/>
                    <field name="status"/>
                    <field name="date_created"/>
                    <field name="date_last_modified"/>
                </tree>
            </field>
        </record>

