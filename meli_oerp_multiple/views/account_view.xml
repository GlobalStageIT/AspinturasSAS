<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_meli_invoice_form_view">
          <field name="name">mercadolibre.account.move.form</field>
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_move_form" />
          <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_bank_id']" position="after">
               <button name="meli_global_invoice_fix_status" class="oe_highlight"  type="object" string="Fix Order Invoices Status"  />
             </xpath>

             <xpath expr="//field[@name='account_id']" position="before">
               <!-- invoice lines -->
               <field name="meli_sale_name" optional="hide"/>
               <field name="meli_sale_id" optional="hide"/>
               <field name="meli_sale_invoice_status" optional="hide"/>
             </xpath>
          </field>
        </record>

    </data>
	</odoo>
